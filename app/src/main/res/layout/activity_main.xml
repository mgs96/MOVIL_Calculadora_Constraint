<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mauricio.calculadora_constraint.MainActivity">

    <!-- Primera Fila -->
    <Button
        android:text="C"
        android:id="@+id/buttonC"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClickClear"/>

    <Button
        android:text="()"
        android:id="@+id/buttonPAr"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="%"
        android:id="@+id/buttonPor"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonDIV"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="/"
        android:id="@+id/buttonDIV"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="10dp"
        android:onClick="onClickDIV"/>
    <!-- Fin primera fila -->

    <!-- Segunda FIla -->
    <Button
        android:text="7"
        android:id="@+id/button7"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick7"/>

    <Button
        android:text="8"
        android:id="@+id/button8"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/buttonPAr"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="onClick8"/>

    <Button
        android:text="9"
        android:id="@+id/button9"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonX"
        app:layout_constraintTop_toBottomOf="@+id/buttonPor"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick9" />

    <Button
        android:text="X"
        android:id="@+id/buttonX"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonDIV"
        android:layout_marginTop="10dp" />
    <!-- Fin Segunda fila -->

    <!-- Tercera FIla -->
    <Button
        android:text="4"
        android:id="@+id/button4"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick4"/>

    <Button
        android:text="5"
        android:id="@+id/button5"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="onClick5"/>

    <Button
        android:text="6"
        android:id="@+id/button6"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonMINUS"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick6"/>

    <Button
        android:text="-"
        android:id="@+id/buttonMINUS"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonX"
        android:layout_marginTop="10dp"
        />
    <!-- Fin Tercera fila -->

    <!-- Cuarta FIla -->
    <Button
        android:text="1"
        android:id="@+id/button1"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick1"/>

    <Button
        android:text="2"
        android:id="@+id/button2"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="onClick2"/>

    <Button
        android:text="3"
        android:id="@+id/button3"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonPLUS"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick3"/>

    <Button
        android:text="+"
        android:id="@+id/buttonPLUS"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMINUS"
        android:layout_marginTop="10dp"
        android:onClick="onClickPLUS"/>
    <!-- Fin Cuarta fila -->

    <!-- Quinta FIla -->
    <Button
        android:text="."
        android:id="@+id/buttonDOT"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="0"
        android:id="@+id/button0"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonDOT"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:onClick="onClick0"/>

    <Button
        android:text="+/-"
        android:id="@+id/buttonByMinus1"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonEQUALS"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp" />

    <Button
        android:text="="
        android:id="@+id/buttonEQUALS"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPLUS"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="onClickEQUALS"/>
    <!-- Fin Quinta fila -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:text=""
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp" />
</android.support.constraint.ConstraintLayout>
